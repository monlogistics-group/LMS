<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<!-- General Action -->
	<record id="lms_general_action" model="ir.actions.act_window">
		<field name="name">LMS General</field>
		<field name="res_model">lms.general</field>
		<field name="view_mode">kanban,tree,form</field>
	</record>
	<!-- General Tree List view -->
	<record id="lms_general_view_tree" model="ir.ui.view">
		<field name="name">LMS Tree</field>
		<field name="model">lms.general</field>
		<field name="arch" type="xml">
			<tree>
				<field name="name" />
				<field name="origin_point" />
				<field name="destination_point" />
			</tree>
		</field>
	</record>
	<!-- General Kanban List view -->
	<record id="lms_general_view_kanban" model="ir.ui.view">
		<field name="name">LMS Tree</field>
		<field name="model">lms.general</field>
		<field name="arch" type="xml">
			<kanban class="o_kanban_mobile" sample="1" default_group_by="state" group_create="0">
				<templates>
					<t t-name="kanban-box">
						<div t-attf-class="oe_kanban_global_click">
							<div class="oe_title">
								<b>
									<field name="name" />
								</b>
							</div>
							<div class="oe_title badge badge-primary text-white">
								<b>
									<field name="state" />
								</b>
							</div>
							<div class="badge badge-secondary text-white">
								<field name="customer_id" />
							</div>
							<div>
								Origin:
								<b>
									<field name="origin_point" />
								</b>
								<span class="float-right">
									Destination:
									<b>
										<field name="destination_point" />
									</b>
								</span>
							</div>
						</div>
					</t>
				</templates>
			</kanban>
		</field>
	</record>
	<!-- General search view -->
	<record id="lms_general_view_search" model="ir.ui.view">
		<field name="name">LMS Filters</field>
		<field name="model">lms.general</field>
		<field name="arch" type="xml">
			<search>
				<field name="name" />
			</search>
		</field>
	</record>
	<!-- General Form View -->
	<record id="lms_general_view_form" model="ir.ui.view">
		<field name="name">lms.general.form</field>
		<field name="model">lms.general</field>
		<field name="arch" type="xml">
			<form>
				<header>
					<field name="state" widget="statusbar" nolabel="1" options="{'clickable':'1'}" attrs="{'select':'1'}" />
				</header>
				<sheet>
					<div class="oe_title">
						<h1>
							<field name="name" readonly="1" />
						</h1>
					</div>
					<group string="General Details">
						<group>
							<field name="customer_id" widget="res_partner_many2one" options="{'always_reload': True}" />
							<field name="operation_types" />
							<field name="consignee_id" widget="res_partner_many2one" options="{'always_reload': True}" />
						</group>
						<group>
							<field name="freigth_types" />
							<field name="shipper_id" widget="res_partner_many2one" options="{'always_reload': True}" />
						</group>
					</group>
					<group string="Package Types">
						<group>
							<label for="gross_weigth" />
							<div class="o_row">
								<field name="gross_weigth" />
								<span>kg</span>
							</div>
							<field name="fleet_id" />
							<field name="driver_id" />
						</group>
						<group>
							<label for="volume" />
							<div class="o_row">
								<field name="volume" />
								<span>„é•</span>
							</div>
							<field name="package_qty" />
						</group>
					</group>
					<group string="Details">
						<group>
							<field name="estimated_cost" />
							<field name="origin_point" />
							<field name="estimated_pickup" />
							<field name="actual_pickup" />
						</group>
						<group>
							<field name="actual_cost" />
							<field name="destination_point" />
							<field name="estimated_delivery" />
							<field name="actual_delivery" />
						</group>
					</group>
					<group>
						<field name="notice" widget="gplaces_address_form" options="{'component_form': {'street_number': 'short_name'}}"/>
					</group>

					<notebook>
						<page string="Orders">
							<field name="general_order" mode="tree,form" >
								<tree>
									<field name="name"/>
									<field name="description"/>
									<field name="operation_types"/>
									<field name="gross_weigth"/>
									<field name="volume"/>
									<field name="quantity"/>
								</tree>
							</field>
						</page>
						<page string="Packages">
							<!-- <field name="general_package" mode="tree,form" >
								<tree>
									<field name="name"/>
									<field name="description"/>
									<field name="operation_types"/>
									<field name="gross_weigth"/>
									<field name="volume"/>
								</tree>
							</field> -->
						</page>
						<page string="Services">
							<field name="sales_products"/>
						</page>
					</notebook>
				</sheet>
				<div class="oe_chatter">
					<field name="message_follower_ids" />
					<field name="activity_ids" />
					<field name="message_ids" />
				</div>
			</form>
		</field>
	</record>
	<!-- General Model in Menu -->
	<menuitem id="lms_general" name="General" parent="lms_operation_menu" action="lms_general_action" />
</odoo>