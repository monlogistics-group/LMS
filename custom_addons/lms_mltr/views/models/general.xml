<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<!-- General Action -->
	<record id="lms_general_action" model="ir.actions.act_window">
		<field name="name">LMS General</field>
		<field name="res_model">lms.general</field>
		<field name="view_mode">kanban,tree,form</field>
	</record>
	<!-- General Tree List view -->
	<record id="lms_general_view_tree" model="ir.ui.view">
		<field name="name">LMS Tree</field>
		<field name="model">lms.general</field>
		<field name="arch" type="xml">
			<tree>
				<field name="name" />
				<field name="origin_country" />
				<field name="destination_country" />
			</tree>
		</field>
	</record>
	<!-- General Kanban List view -->
	<record id="lms_general_view_kanban" model="ir.ui.view">
		<field name="name">LMS Tree</field>
		<field name="model">lms.general</field>
		<field name="arch" type="xml">
			<kanban class="o_kanban_mobile" sample="1" default_group_by="state" group_create="0">
				<templates>
					<t t-name="kanban-box">
						<div t-attf-class="oe_kanban_global_click">
							<div class="oe_title">
								<b><field name="name"/></b>
							</div>
							<div class="oe_title badge badge-primary text-white">
								<b><field name="state"/></b>
							</div>
							<div class="badge badge-secondary text-white">
								<field name="customer_id"/>
							</div>
							<div>
								Origin: <b><field name="origin_country"/></b>
								<span class="float-right">
									Destination: <b><field name="destination_country"/></b>
								</span>
							</div>
						</div>
					</t>
				</templates>
			</kanban>
		</field>
	</record>
	<!-- General search view -->
	<record id="lms_general_view_search" model="ir.ui.view">
		<field name="name">LMS Filters</field>
		<field name="model">lms.general</field>
		<field name="arch" type="xml">
			<search>
				<field name="name" />
			</search>
		</field>
	</record>
	<!-- General Form View -->
	<record id="lms_general_view_form" model="ir.ui.view">
		<field name="name">lms.general.form</field>
		<field name="model">lms.general</field>
		<field name="arch" type="xml">
			<form>
				<header>
					<field name="state" widget="statusbar" nolabel="1" options="{'clickable':'1'}"/>
				</header>
				<sheet>
					<div class="oe_title">
						<h1>
							<field name="name" readonly="1" />
						</h1>
					</div>
					<group name="group_top">
						<group name="group_left">
							<field name="customer_id" widget="res_partner_many2one" options="{'always_reload': True}" />
							<field name="gross_weigth" />
							<field name="volume" />
							<field name="package_qty" />
							<field name="package_img" widget="image" />
							<field name="freigth_types" />
							<field name="package_name" />
							<field name="origin_country" />
							<field name="origin_address" />
							<field name="destination_country" />
						</group>
						<group name="group_right">
							<field name="destination_delivery" />
							<field name="pickup_date" />
							<field name="delivery_date" />
							<field name="estimated_cost" />
							<field name="mltr_cost" />
							<field name="contact_name" widget="google_places"/>
							<field name="contact_details" />
							<field name="temprature" />
							<field name="fleet_id" widget="fleet_vehicle_many2one" options="{'always_reload': True}" />
							<field name="notice" />
						</group>
					</group>
				</sheet>
			</form>
		</field>
	</record>
	<!-- General Model in Menu -->
	<menuitem id="lms_general" name="General" parent="lms_operation_menu" action="lms_general_action" />
</odoo>