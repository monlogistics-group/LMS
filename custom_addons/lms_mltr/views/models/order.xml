<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<!-- General Order Action -->
	<record id="lms_general_order_action" model="ir.actions.act_window">
		<field name="name">LMS Order General</field>
		<field name="res_model">lms.general.order</field>
		<field name="view_mode">tree,form</field>
	</record>
	<!-- General Order Tree List view -->
	<record id="lms_general_order_view_tree" model="ir.ui.view">
		<field name="name">LMS Tree</field>
		<field name="model">lms.general.order</field>
		<field name="arch" type="xml">
			<tree>
				<field name="name" />
				<field name="general_id" />
				<field name="operation_types" />
				<field name="description" />
				<field name="volume" />
				<field name="gross_weigth" />
				<field name="quantity" />
			</tree>
		</field>
	</record>
	<!-- General Form View -->
	<record id="lms_general_order_view_form" model="ir.ui.view">
		<field name="name">lms.general.order.form</field>
		<field name="model">lms.general.order</field>
		<field name="arch" type="xml">
			<form>
				<sheet>
					<div class="oe_title">
						<h1>
							<field name="name" readonly="1" />
						</h1>
					</div>
					<group>
						<field name="general_id"/>
						<field name="operation_types"/>
						<field name="description"/>
						<field name="gross_weigth"/>
						<field name="volume"/>
						<field name="quantity"/>
					</group>
				</sheet>
			</form>
		</field>
	</record>
	<!-- General Model in Menu -->
	<menuitem id="lms_general_order" name="Order" parent="lms_operation_menu" action="lms_general_order_action" />
</odoo>