<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="lms_general_status_action" model="ir.actions.act_window">
        <field name="name">Status</field>
        <field name="res_model">lms.general.status</field>  
        <field name="view_mode">tree,form</field>
    </record>

    <record id="lms_general_status_view_form" model="ir.ui.view">
        <field name="name">lms.general.status.form</field>
        <field name="model">lms.general.status</field> 
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="active"/>
                        <field name="default"/>
                        <field name="name"/>
                        <field name="description"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="lms_general_status_view_tree" model="ir.ui.view">
        <field name="name">lms.general.status.tree</field>
        <field name="model">lms.general.status</field> 
        <field name="arch" type="xml">
            <tree>
                <field name="id" widget="handle"/>
                <field name="default"/>
                <field name="name"/>
                <field name="description"/>
            </tree>
        </field>
    </record>
</odoo>
